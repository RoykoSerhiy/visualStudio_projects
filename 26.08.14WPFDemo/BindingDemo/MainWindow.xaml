<Window x:Class="BindingDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label Height="29" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"
               Name="myLabel" Width="200" Content="{Binding ElementName=myTextBox,Path=Text}" />
        <TextBox Height="23" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Name="myTextBox" Width="200"/>

    </Grid>
</Window>
