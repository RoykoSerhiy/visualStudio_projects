<Window x:Class="SliderDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Slider Height="21" Name="slider1" VerticalAlignment="Bottom" Margin="10,0,10,0" Value="200" Minimum="100"
                Maximum="400" ValueChanged="slider1_ValueChanged" />
            
        <Slider Name="slider2" Orientation="Vertical" HorizontalAlignment="Left" Width="21" Margin="0 , 10 , 0 , 30"
                Maximum="250" Minimum="100" Value="400" ValueChanged="slider2_ValueChanged"/>
        <Image Margin="78,0,0,65" Name="image1" Stretch="Fill" Source="img/22.jpg" MinWidth="100" MinHeight="70"
               MaxHeight="250" MaxWidth="400" />
    </Grid>
</Window>
