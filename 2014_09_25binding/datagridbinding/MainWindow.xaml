<Window x:Class="datagridbinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="10">
        <DataGrid Name="dgWorkers" 
            AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Width="*" Header="Id" />
                <DataGridTextColumn Binding="{Binding fName}" Width="3*" Header="First Name" />
                <DataGridTextColumn Binding="{Binding lName}" Width="3*" Header="Last Name" />
                <DataGridTextColumn Binding="{Binding Position}" Width="2*" Header="Position" />
                <DataGridTextColumn Binding="{Binding Phone}" Width="2*" Header="Phone" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
